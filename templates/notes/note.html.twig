{% extends 'notes/list-notes.html.twig' %}

{% block note %}
<!--Vista-Mensaje-->
<div class="container">
    <div class="msg_detail"> 
                   
        <div class="row">
            <div class="col-md-2">
                <img class="img-msg float-right" src =""/>                                       
            </div>
            <div class="col-md-10">
                <span class="fs-18"> messageid.getUserSender.name</span>
                <span class="fs-12"> messageid.time|date("d/m/y H:i")</span>
                <p class="p-t-15">messageid.text</p>  
                <p class="p-t-15">messageid.getInterestProject.getInterestDescription</p>           
            </div>
        </div>
        <hr/>
    
    </div>
    <div class="input-group">
        <input type="text" class="form-control py-3" placeholder="Una nota..." aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="bt-home text-white" type="button">Enviar</button>
        </div>
    </div>   
</div>          
{% endblock %} 