{% extends 'base.html.twig' %}

{% block title %}Notas -{{app.user.getName}} {% endblock %}

{% block content %}
    <!--Vista Notificaciones-Mensajes-->
     <div class="view-msg  shadow_box bgGris p-3 m-b-25">
        <div class="container">
            <div class="row">
                <div class="col-md-4 ">
                    <h4>Notas</h4>
                    <hr/>
                    {% if userNotes is empty%}
                        <h5>No tienes Notas</h5>
                    {% else %}
                    {% for userNote in userNotes  %}
                    {{dump(userNote)}}
                        
                        <a href="{{ path('note',{"id": userNote.getInterestProfile.id ,"type_interest":"interest_profile"} )}}">
                            <div class="user_mensaje ">
                                <div class="row">                            
                                        {#Aqui compruebo si es un Interest Project o un Interest Profile#}
                                            {% if userNote.getInterestProject %}                                                
                                                {% set proyectName = userNote.getInterestProject.getInterestIdProject.getProjectName %}
                                                {% set imgUser = userNote.getInterestProject.getInterestIdProject.getInterestIdUser.getProfileImg %}                                                
                                            {% endif %}

                                            {% if userNote.getInterestProfile %}                                                
                                                {% set profileName = userNote.getInterestProfile.getInterestProfile.getName %}
                                                {% set imgUser = userNote.getInterestProfile.getUserProfileOwner.getProfileImg %}                                                
                                            {% endif %}
                                        
                                        
                                        
                                        <div class="col-md-3"> 
                                            <img class="img-msg" src ="{{ asset('build/img/uploads/users_profile/' ~ imgUser) }}"/> 
                                        </div>
                                        
                                        <div class="col-md-9">
                                            <span class="fs-18">{{ userNote.getUser.name}}</span>

                                            
                                            {% if proyectName is defined %}                                                
                                                <span class="fs-12">:<span class="ver_color"> {{ proyectName}}</span></span>
                                            {% endif %}

                                            {% if profileName is defined %}                                                
                                                <span class="fs-12">Nota para perfil:<span class="ver_color"> {{ profileName}}</span></span>
                                            {% endif %}
                                            <p>
                                            </p>
                                            <p>
                                                <span class="float-left fs-12">{{ userNote.getNotesDate|date("d/M/y")}}</span>
                                                <span class="float-right fs-12">{{ userNote.getNotesDate|date("H:i")}}</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <hr/>
                            </a> 
                    {% endfor %}
                    {% endif %} 
                </div>
                <div class="col-md-8 border-left">           
                    {% block note %}
                           <div class="user_mensaje text-center py-5">
                                <div class="row">
                                    <div class="col-md-12"> 
                                        <img class="img-msg" src ="{{ asset('build/img/uploads/users_profile/' ~ app.user.getProfileImg) }}"/> 
                                    </div>
                                    <div class="col-md-12">
                                        <h4 class="py-3">Hola {{app.user.getName}} </h4>
                                        <h6 class="px-3">Aqui puedes ver tus notas sobre cada contacto y colaboracion ya empezada segun reuniones y avanze de los mismos:</h6>                                                                 
                                    </div>
                                </div>
                            </div>
                    {% endblock %}                
                </div>
            </div>  
        </div>
    </div>
{% endblock %}
