{% extends 'admin/view-admin.html.twig' %}

{% block contentAdmin %}

<!--Admin projects-->
{% if is_granted('ROLE_ADMIN') and (app.user.username == 'admin') %}
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" method="post">
                    <fieldset>
                        <legend class="p-3">Añadir nuevo espacio de trabajo</legend>

                        <div class="form-group">
                            <div class="col-md-8">
                                <input id="fname" name="name" type="text" placeholder="Nombre CoWorker" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                                <input id="lname" name="name" type="text" placeholder="Direccion CoWorker" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="phone" name="phone" type="text" placeholder="Telefono contacto" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                <textarea class="form-control" id="message" name="message" placeholder="Añadir horario o cualquier coment sobre localizacion" rows="6"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn-md btn-secondary p-2">Añadir Nuevo Spacio</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    {% else %}
        <a href="{{ path('security_login') }}"><p class="btn btn-primary btn-block fs-20 text-center ">Inicia Sesion como administrator</p></a>   
{% endif %}         
{% endblock %}