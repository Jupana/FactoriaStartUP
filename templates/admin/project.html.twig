{% extends 'admin/view-admin.html.twig' %}

{% block contentAdmin %}
<!--Admin project-->
{% if is_granted('ROLE_ADMIN') and (app.user.username == 'admin') %} 

     <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Columna</th>
                <th scope="col">Descripcion</th>
                 <th scope="col">Evaluacion</th>
            </tr>
        </thead>
        <tbody>     
                <tr>
                    <td>Nombre del Proyecto:</td>
                    <td><span class="ver_color">{{project.ProjectName}}</span></td>
                    <th scope="col">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Dar OK</label>
                        </div>
                        <textarea>Pon tu Comentario</textarea>              
                    </th>
                 </tr>
                <tr>
                    <td>Sector :</td>
                    <td><span class="ver_color">{{project.ProjectSector}}</span></td>
                      <th scope="col">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Dar OK</label>
                        </div>
                        <textarea>Pon tu Comentario</textarea>              
                    </th>
                </tr>
                <tr>    
                    <td>Descripcion :</td>
                    <td><span class="ver_color">{{project.ProjectDescription}}</span></td>
                    <th scope="col">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Dar OK</label>
                        </div>
                        <textarea>Pon tu Comentario</textarea>              
                    </th>
                </tr>
                <tr>    
                    <td>Facturacion Estimada :</td>
                    <td>      
                        <span>año1:<span class=" ver_color fs-17"> {{ project.ProjectAproxFacturation1}}€</span></span> ,
                        <span>año2: <span class="ver_color fs-17">{{ project.ProjectAproxFacturation2}}€</span></span> ,
                        <span>año3: <span class="ver_color fs-17">{{ project.ProjectAproxFacturation3}}€</span></span>
                    </td>
                    <th scope="col">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Dar OK</label>
                        </div>
                        <textarea>Pon tu Comentario</textarea>              
                    </th>
                </tr>
                <tr>    
                    <td>Clientes Potenciales :</td>
                    <td>
                        <span>Usarios: <span class=" ver_color fs-17">{{ project.ProjectPotentialyUsers}}</span></span><br/> 
                        <span>Empresas: <span class="ver_color fs-17">{{ project.ProjectPotentialyCompanies}}</span></span>
                    </td>
                    <th scope="col">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Dar OK</label>
                        </div>
                        <textarea>Pon tu Comentario</textarea>              
                    </th>
                </tr>
                <tr>    
                    <td>Competencia :</td>
                    <td><span class="ver_color">{{ project.ProjectCompetitors}}</span></td>
                    <th scope="col">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Dar OK</label>
                        </div>
                        <textarea>Pon tu Comentario</textarea>              
                    </th>
                </tr>
                <tr>
                    <td>Aportacion:</td>
                    <td>
                         {% for contribute in contributeProjects %}
                            {% if contribute.ContributeProfile %}<span class="ver_color">{{contribute.ContributeProfile.name}}</span>
                            {% endif %}:
                                {{contribute.ContributeDescription}}</br> 
                        {% endfor %} 
                    </td>
                        <th scope="col">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Dar OK</label>
                        </div>
                        <textarea>Pon tu Comentario</textarea>              
                    </th>
                </tr>  
                <tr>    
                    <td>Necesidades y Propuestas de colaboracion:</td>                           
                    <td>
                        {% for needProject in needsProject %}      
                            {% if needProject.NeedsProfile %}
                                <span class="ver_color">{{needProject.NeedsProfile.name}}</span>
                            {% endif %} :      
                            {% if needProject.NeedsPercent != 0 %}
                                <span>{{needProject.NeedsPercent}}</span>
                            {% endif %}
                            <span>{{needProject.NeedsDeal}}:<br/>{{needProject.NeedsDescription}}<br/><span>                                        
                    {% endfor %}
                    </td>
                    <th scope="col">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Dar OK</label>
                            </div>
                            <textarea >Pon tu Comentario</textarea>              
                    </th>
                </tr>            
                <tr>    
                    <td>Contacto :</td>
                    <td>
                        <span>Usuario: <span class="ver_color">{{project.user.username}}</span></span>, Nombre: <span class="ver_color">{{project.user.name}}</span></span><br/>
                        <span>Email: <span class="ver_color">{{project.user.email}}</span></span><br/>
                        <span>Telefono: <span class="ver_color">{{project.user.phoneNumber}}</span></span><br/>
                    </td>
                    <th scope="col">
                        <button class="text-white bgAzul2 p-3">Envia comnetarios/OK del proyecto</button>                      
                    </th>
                </tr>
        </tbody>
    </table>
    </div>
    {% else %}
        <a href="{{ path('security_login') }}"><p class="btn btn-primary btn-block fs-20 text-center ">Inicia Sesion como administrator</p></a>   
{% endif %}         
{% endblock %}

