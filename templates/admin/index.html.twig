{% extends 'admin/view-admin.html.twig' %}

{% block contentAdmin %}
<!--Admin projects-->
{% if is_granted('ROLE_ADMIN') and (app.user.username == 'admin') %} 
    <div class="form-group row">
            <div class="col-md-10 col-9">
                <input class="form-control " placeholder="Buscar project" type="search" style="height:100%;">            
            </div>             
            <button type="search" class="btn-md bgGris ">Buscar</button>                           
        </div>
    <div class="row">
        <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Project</th>
            <th scope="col">Usuario</th>
            <th scope="col">Fecha Alta</th>
            <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
            {% for id ,project in projects %}  
                <tr>
                    <th scope="row">{{id}}</th>
                    <td><a href="{{ path("admin-projects-project",{"id": project.id }) }}">{{project.ProjectName}}</a></td>
                    <td>{{project.user.name}}</td>
                    <td>{{ project.ProjectDate|date("d/m/y")}}</td>
                    <td>Si</td>
                </tr>
            {% endfor %} 

        </tbody>
    </table>
    </div>
    {% else %}
        <a href="{{ path('security_login') }}"><p class="btn btn-primary btn-block fs-20 text-center ">Inicia Sesion como administrator</p></a>   
{% endif %}         
{% endblock %}

