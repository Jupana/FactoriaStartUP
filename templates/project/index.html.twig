{% extends 'base.html.twig' %}

{% block title %}Proyectos{% endblock %}

{% block content %}
{% for message in app.flashes('notice') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% if is_granted('ROLE_USER') %}    
<small class="d-block text-right pt-3">
    <a href="{{ path('add_project') }}"class="btn btn-sm btn-primary">AÃ±adir Proyecto</a> 
</small>
{% endif %}
<!--Proyectos-->
    <h1 class="col-md-12 text-center m-t-20 m-b-20 par">Buscar Proyectos </h1>
      <form class="form-inline m-t-20 m-b-20">
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Sectores</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>Elije...</option>
            {% for sector in opciones_sectores %}
                <option>
                    {{ sector.name }}</li>
                </option>    
            {% endfor %}  
        </select>
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Perfiles</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>Elije...</option>
                {% for perfil in opciones_perfil %}             
                    <option>
                        {{ perfil.name }}</li>
                    </option>                 
                {% endfor %}
               
        </select>
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Distancia</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>Elije...</option>
            <option value="1">Max...50km</option>
            <option value="2">Max...100km</option>
            <option value="3"> Mas...100km</option>
        </select>
        <button type="submit" class="d-none d-sm-block btn btn-sm  btn-outline-secondary my-2 my-xs-0">Buscar</button>
        <button type="submit" class="d-block d-sm-none btn btn-block btn-outline-secondary my-2 my-xs-0">Buscar</button>
    </form> 
    <div class="row ">
    {% for project in projects %}
        <div class="col-md-4 col-sm-6 col-xs-12 m-t-10 m-b-10"> 
            <div class="card border">                         
                <div class="card-header d-none d-sm-block">  
                    <img  class="card-img-top" src="{{ asset('logo.png','imagenlogo') }}" alt="image">
                </div>
                <div class="card-body ">     
                    <h4 class="card-title">{{ project.ProjectName }}</h4>                                     
                    <p class="card-text">Descripcion Proyecto</br>{{ project.ProjectShortDescription}}</p>               
                </div> 
                <div class="card-footer">
                    <span class="d-block"><strong>@{{project.user.username}}:</strong><small>{{ project.ProjectDate|date("d/m/y")}}</small></span>
                    <a href="{{ path("detalle_proyecto",{"id": project.id }) }}" class=" ver_color">Ver Mass..</a></br>
                    {% if is_granted('edit', project) %} 
                        <a href="{{ path("editar_proyecto",{"id": project.id }) }}" class="btn btn-outline-warning">Modificar</a>
                    {% endif %}
                    {% if is_granted('delete', project) %} 
                        <a href="{{ path("eliminar_proyecto",{"id": project.id }) }}" class="btn btn-outline-danger">Eliminar</a>
                    {% endif %}
                </div>                                                  
            </div>
        </div> 
    {% endfor %}            
    </div>
{% endblock %}

