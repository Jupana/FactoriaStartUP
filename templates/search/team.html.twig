{% extends 'base.html.twig' %}

{% block title %}Perfiles{% endblock %}

{% block content %}
<!--Equipos-->
<h1 class="col-md-12 text-center m-t-20 m-b-20 par">Buscar Equipo</h1>
    <form class="form-inline m-t-20 m-b-20">
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Sectores</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>Elije...</option>
                {% for sector in opciones_sectores %}
                <option>
                    {{ sector.name }}</li>
                </option>    
                {% endfor %}  
            </option>       
        </select>
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Perfiles</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>Elije...</option>
             {% for perfil in opciones_perfil %}
                <option>
                    {{ perfil.name }}</li>
                </option>    
            {% endfor %}
        </select>
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Distancia</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>Elije...</option>
            <option value="1">Max...50km</option>
            <option value="2">Max...100km</option>
            <option value="3"> Mas...100km</option>
        </select>
        <button type="submit" class="d-none d-sm-block btn btn-sm  btn-outline-secondary my-2 my-xs-0">Buscar</button>
        <button type="submit" class="d-block d-sm-none btn btn-block btn-outline-secondary my-2 my-xs-0">Buscar</button>
    </form> 
    <div class="row ">
    {% for profil in profiles %}
        <div class="col-md-4 col-sm-6 col-xs-12 m-t-10 m-b-10"> 
            <div class="card border">                         
                <div class="card-header d-none d-sm-block">  
                    <img  class="card-img-top" src="{{ asset('img.png','img') }}" alt="image">
                </div>
                <div class="card-body ">     
                    <h4 class="card-title">Usuario:<br/>{{ profil.User.Name}}</h4>                   
                    <p class="card-text">Perfil:{{ profil.Profil.Name}}</strong></p>
                    <p class="card-text">Sector:{{ profil.Sector.Name}}</strong></p>                               
                </div> 
                <div class="card-footer"><a href="{{ path('detalle_usuario') }}" class=" ver_color">Ver Mass..</a></div>                                                  
            </div>
        </div>   
    {% endfor %}     
    </div>
                      
{% endblock %}

