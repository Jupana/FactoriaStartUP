{% extends 'base.html.twig' %}


{% block title %}Perfiles{% endblock %}

{% block content %}
{% for message in app.flashes('notice') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<!--Equipos-->
<h1 class="col-md-12 text-center m-t-20 m-b-20 par">Buscar Equipo</h1>
    <form class="form-inline m-t-20 m-b-20 form-filter-profiles">
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Perfiles</label>
        <select class="custom-select my-1 mr-sm-2" id="select-profiles">
            <option selected>Elije...</option>
             {% for perfil in opciones_perfil %}
                <option value={{perfil.id}}>
                    {{ perfil.name }}</li>
                </option>    
            {% endfor %}
        </select>
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Sectores</label>
        <select class="custom-select my-1 mr-sm-2" id="select-sector">
            <option selected>Elije...</option>
                {% for sector in opciones_sectores %}
                <option>
                    {{ sector.name }}</li>
                </option>    
                {% endfor %}  
            </option>       
        </select>
        
        <input type="number" name="km" class="proyect-km" placeholder="Distancia en KM">
        <button type="button" class="d-none d-sm-block btn btn-sm  btn-outline-secondary my-2 my-xs-0 filter-profiles">Buscar</button>
    </form> 
    <div class="row ">
 
    {% for profile in profiles %}
                <!-- Recojemos todos los perfiles del mismo usuario -->          
            {% if userIdToCheck is not defined %}
               <div class="col-md-4 col-sm-6 col-xs-12 m-t-10 m-b-10"> 
                <div class="card border">                         
                        <div class="card-header d-none d-sm-block">                     
                            <img  class="card-img-top" src ="{{ asset('build/img/uploads/users_perfil/' ~ profile.user.getPerfilImg) }}" alt="image"/>
                        </div>
                    <div class="card-body ">     
                        <h4 class="card-title">Usuario:<br/>{{ profile.user.username}}</h4>                   
                            <p class="card-text">Perfil:{{ profile.profil}}</strong></p>
                            <p class="card-text">Sector:{{ profile.sector}}</strong></p>                
            {% elseif userIdToCheck != profile.user.id %}
                        </div>
                                <div class="card-footer">
                                    <a href="{{ path('detalle_profile',{"id": userIdToCheck }) }}" class=" ver_color">Ver Mas...</a></br>                                                
                                </div>
                    </div>
               </div> 
                <div class="col-md-4 col-sm-6 col-xs-12 m-t-10 m-b-10"> 
                    <div class="card border">                         
                            <div class="card-header d-none d-sm-block">                     
                                <img  class="card-img-top" src ="{{ asset('build/img/uploads/users_perfil/' ~ profile.user.getPerfilImg) }}" alt="image"/>
                            </div>
                            <div class="card-body ">     
                                <h4 class="card-title">Usuario:<br/>{{ profile.user.username}}</h4>                   
                                    <p class="card-text">Perfil:{{ profile.profil}}</strong></p>
                                    <p class="card-text">Sector:{{ profile.sector}}</strong></p>
                                <div class="card-footer">
                                    <a href="{{ path('detalle_profile',{"id": profile.id }) }}" class=" ver_color">Ver Mas...</a></br>                                                
                                </div>
                            </div>
                    </div> 
               </div>
            {% elseif userIdToCheck == profile.user.id %}
                    <hr/>
                    <p class="card-text">Perfil:{{ profile.profil}}</strong></p>
                    <p class="card-text">Sector:{{ profile.sector}}</strong></p>
            {% endif %}
            {% set userIdToCheck = profile.user.id %}
                 <!-- FIN Recojemos todos los perfiles del mismo usuario --> 
    {% endfor %}    
    </div>
    <!--Ventana Pop-Up -->         
{% endblock %}

 

