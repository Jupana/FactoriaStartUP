{% extends 'base.html.twig' %}


{% block title %}Perfiles{% endblock %}

{% block content %}
{% for message in app.flashes('notice') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<!--Equipos-->
<div class="bgWhite">
    <h1 class="col-md-12 text-center search-title p-t-20">Buscar Equipo para TU Proyecto</h1>
    <form class="m-b-50 m-l-20 m-r-20 form-filter-profiles">
         <div class="row">
                <div class="col-12 col-md-4 col-lg-3">
                    <div class="form-group">
                        <select class="custom-select form-control-search" id="select-profiles">
                            <option selected>Elije Perfil...</option>
                            {% for perfil in opciones_perfil %}
                                <option value={{perfil.id}}>
                                    {{ perfil.name }}</li>
                                </option>    
                            {% endfor %}
                        </select>
                   </div>
                </div>
                <div class="col-12 col-md-4 col-lg-3">
                    <div class="form-group">        
                        <select class="custom-select form-control-search" id="select-sector">
                            <option selected>Elije Sector...</option>
                                {% for sector in opciones_sectores %}
                                <option>
                                    {{ sector.name }}</li>
                                </option>    
                                {% endfor %}  
                            </option>       
                        </select>
                    </div>
                </div>         
                <div class="col-12 col-md-4 col-lg-3">
                    <div class="form-group">  
                        <input type="number" name="km" class="proyect-km form-control-search" placeholder="Distancia en KM">
                    </div>
                </div>
                 <div class="col-12 col-md-4 col-lg-3">
                    <div class="form-group">          
                        <button type="button" class="btn search-btn filter-profiles">Buscar</button>
                    </div>
               </div>
         </div>           
    </form> 
</div>    
    <div class="row ">
        {% for profile in profiles %}
                <!-- Recojemos todos los perfiles del mismo usuario -->          
                <div class="col-md-4 col-sm-6 col-xs-12 m-t-10 m-b-10"> 
                        <div class="card border">                         
                                <div class="card-header d-none d-sm-block">                     
                                   <img  class="card-img-top" src ="{{ asset('build/img/uploads/users_perfil/' ~ profile.user_img) }}" alt="image"/>
                                </div>
                                <div class="card-body">     
                                    <h4 class="card-title"><br/>{{ profile.name}}</h4>                   
                                    <table class="table">
                                        <thead class="bgAzul text-white">
                                            <tr>
                                                <th>Perfil</th>
                                                <th>Sector</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% set i = 0 %}
                                            {% for userperfil in profile.perfiles %}
                                            <tr>                       
                                                <td>
                                                    <p>{{ userperfil}}</p>                                 
                                                </td>
                                                <td>
                                                    <p>{{ profile.sectors[i]}}</p> 
                                                </td>                          
                                            </tr>
                                            {% set i = i + 1 %}
                                            {% endfor %}
                                        </tbody>
                                    </table>   
                                    <div class="card-footer">                     
                                        <a href="{{ path('detalle_profile',{"id": profile.user_id }) }}" class=" ver_color 2">Ver Mas...</a></br>                                                
                                    </div>
                                </div>
                        </div> 
                    </div>
                 <!-- FIN Recojemos todos los perfiles del mismo usuario --> 
    {% endfor %}    
    </div>
    <!--Ventana Pop-Up -->         
{% endblock %}

 

